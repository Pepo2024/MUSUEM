            <!-- زر تسجيل الدخول عبر جوجل -->
            <div class="g_id_signin" 
                 data-type="standard" 
                 data-size="large" 
                 data-theme="outline" 
                 data-text="signin_with" 
                 data-shape="rectangular" 
                 data-logo_alignment="center">
            </div>

            <!-- زر تسجيل الدخول عبر فيسبوك -->
            <div class="fb-login-button" 
                 data-width="" 
                 data-size="large" 
