    <script>
        // إعداد تسجيل الدخول عبر Google
        function handleGoogleResponse(response) {
            console.log("Encoded JWT ID token: " + response.credential);
            // معالجة بيانات المستخدم من جوجل
        }

        window.onload = function () {
            // تهيئة Google Sign-In
            google.accounts.id.initialize({
                client_id: "YOUR_GOOGLE_CLIENT_ID", // استبدل بـ Client ID الخاص بجوجل
                callback: handleGoogleResponse
            });
            google.accounts.id.renderButton(
                document.querySelector(".g_id_signin"), 
                { theme: "outline", size: "large" } // خيارات الزر
            );
            google.accounts.id.prompt(); // اختياري
        }

        // إعداد تسجيل الدخول عبر Facebook
        window.fbAsyncInit = function() {
            FB.init({
                appId: 'YOUR_FACEBOOK_APP_ID', // استبدل بـ App ID الخاص بفيسبوك
                cookie: true,
                xfbml: true,
                version: 'v16.0' // استخدم أحدث إصدار
            });
            
            FB.AppEvents.logPageView();
        };

        // التعامل مع استجابة تسجيل الدخول من فيسبوك
        function checkFacebookLoginState() {
            FB.getLoginStatus(function(response) {
                if (response.status === 'connected') {
                    FB.api('/me', { fields: 'name,email' }, function(userInfo) {
                        console.log('Facebook User Info:', userInfo);
                        // معالجة بيانات المستخدم من فيسبوك
                    });
                } else {
                    console.log('User not authenticated via Facebook.');
                }
            });
        }
    </script>
